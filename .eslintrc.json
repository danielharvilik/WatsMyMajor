{
  "env": {
		"node": true,
		"browser": true,
		"es6": true
	},
  "extends": [
    "standard",
    "standard-react",
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
	"rules": {
		"indent": ["error", 2],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "standard/no-callback-literal": "off",
    "react/jsx-curly-spacing": ["error", {
      "when": "always",
      "spacing": {
        "objectLiterals": "never"
      }
    }]
	}
}
